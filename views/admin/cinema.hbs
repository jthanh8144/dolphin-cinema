<link
  href='/admin/plugins/sweet-alert2/sweetalert2.css'
  rel='stylesheet'
  type='text/css'
/>
<link rel='stylesheet' href='/admin/css/administrator.css' />
<div class='container-fluid'>
  <div class='page-title-box'>
    <div class='row align-items-center'>
      <div class='col-md-12'>
        <div class='page-title-box administrator-title'>
          <h4 class='page-title'>Cinemas</h4>
          {{#compare role '!==' 'viewer'}}
          <a href='/admin/cinemas/create'>
            Create cinemas
            <i class='fas fa-plus'></i>
          </a>
          {{/compare}}
        </div>
      </div>
    </div>
  </div>
  <div class='card'>
    <div class='card-body'>
      <div class='table-responsive'>
        <table class='table mb-0'>
          <thead class='thead-default'>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Location</th>
              <th>Base price</th>
              <th></th>
              {{#compare role '!==' 'viewer'}}
              <th></th>
              {{/compare}}
            </tr>
          </thead>
          <tbody id='list-cinema'>
            {{#each cinemas}}
              <tr>
                <th scope='row'>{{this.id}}</th>
                <td>{{this.name}}</td>
                <td>{{this.location.name}}</td>
                <td>{{numberWithCommas (round this.basePrice)}} VND</td>
                <td>
                  <a href='/admin/cinemas/{{this.id}}/rooms'>See rooms</a>
                </td>
                {{#compare ../role '!==' 'viewer'}}
                <td>
                  <a href='/admin/cinemas/{{../id}}'>
                    <i class='fas fa-pencil-alt'></i>
                  </a>
                  <a href='' class='delete-cinema-btn' data-id='{{../id}}'>
                    <i class='fas fa-trash'></i>
                  </a>
                </td>
                {{/compare}}
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script src='/admin/plugins/sweet-alert2/sweetalert2.min.js'></script>
<script src='/admin/pages/sweet-alert.init.js'></script>
<script src='/admin/js/cinema.js' defer></script>

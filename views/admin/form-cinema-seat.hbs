<link
  href='/admin/plugins/sweet-alert2/sweetalert2.css'
  rel='stylesheet'
  type='text/css'
/>
<link rel='stylesheet' href='/admin/css/administrator.css' />
<div class='container-fluid'>
  <div class='page-title-box'>
    <div class='row align-items-center'>
      <div class='col-md-12'>
        <div class='page-title-box'>
          <h4 class='page-title'>
            {{#if seat}}Update{{else}}Create{{/if}} cinema seat
          </h4>
          <ol class='breadcrumb'>
            <li class='breadcrumb-item'>
              <a href='/admin/cinemas'>Cinemas</a>
            </li>
            <li class='breadcrumb-item active'>
              {{#if cinema}}Update{{else}}Create{{/if}} cinema seat
            </li>
          </ol>
        </div>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-12'>
      <div class='card'>
        <form 
          action='/api/admin/cinema-seats{{#if seat}}/{{seat.id}}{{/if}}' 
          method='{{#if seat}}PUT{{else}}POST{{/if}}' 
          class='card-body' 
          id='cinema-seat-form'
        >
          <div class='form-group row'>
            <label class='col-sm-2 col-form-label'>Cinema</label>
            <div class='col-sm-10'>
              <select class='form-control' id='select-cinema'>
                {{#if room}}
                <option 
                  value='{{room.cinema.id}}' 
                  hidden='hidden' 
                  selected='selected'
                >
                  {{room.cinema.name}}
                </option>
                {{/if}}
                {{#each cinemas}}
                  <option value='{{this.id}}' >{{this.name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class='form-group row'>
            <label class='col-sm-2 col-form-label'>Room</label>
            <div class='col-sm-10'>
              <select class='form-control' id='select-room' name="cinemaRoomId">
                {{#if room}}
                <option 
                  value='{{room.id}}' 
                  hidden='hidden' 
                  selected='selected'
                >
                  {{room.name}}
                </option>
                {{/if}}
                {{#if seat}}
                <option 
                  value='{{seat.cinemaRoom.id}}' 
                  hidden='hidden' 
                  selected='selected'
                >
                  {{seat.cinemaRoom.name}}
                </option>
                {{/if}}
                {{#each rooms}}
                  <option value='{{this.id}}' >{{this.name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class='form-group row'>
            <label class='col-sm-2 col-form-label'>Seat</label>
            <div class='col-sm-10'>
              <select class='form-control' id='select-seat' name="seatId">
                {{#if seat}}
                <option 
                  value='{{seat.seat.id}}' 
                  hidden='hidden' 
                  selected='selected'
                >
                  {{seat.seat.row}}{{seat.seat.column}}
                </option>
                {{/if}}
                {{#each seats}}
                  <option value='{{this.id}}' >{{this.row}}{{this.column}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class='form-group row'>
            <label class='col-sm-2 col-form-label'>Seat type</label>
            <div class='col-sm-10'>
              <select class='form-control' id='select-seat-type' name="seatTypeId">
                {{#if seat}}
                <option 
                  value='{{seat.seatType.id}}' 
                  hidden='hidden' 
                  selected='selected'
                >
                  {{seat.seatType.name}}
                </option>
                {{/if}}
                {{#each seatTypes}}
                  <option value='{{this.id}}' >{{this.name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class='form-group row'>
            <div class='col-sm-12 text-center'>
              <button type='submit' class='btn btn-success'>
                {{#if seat}}Update{{else}}Create{{/if}} cinema seat
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src='/admin/plugins/sweet-alert2/sweetalert2.min.js'></script>
<script src='/admin/pages/sweet-alert.init.js'></script>
<script src='/admin/js/cinema-seat.js' defer></script>
